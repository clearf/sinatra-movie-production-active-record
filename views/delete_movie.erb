<h1><%= @movie['name'] %></h1>

<p>Director: <%= @movie['director'] %></p>
<p>Release date: <%= @movie['release_date'] %></p>

<h3>Tasks</h3>
  <ul>
    <% @tasks.each do |task| %>
      <li><a href="/tasks/<%= task['id'] %>"><%= task['name'] %></a></li>
    <% end %>
  </ul>

<form action="/movies/<%= @movie['id'] %>/delete" method="post">
  <span class="warning">Warning: any tasks regarding this movie will be removed!</span><br>
  <button>Delete movie</button><br>
</form>