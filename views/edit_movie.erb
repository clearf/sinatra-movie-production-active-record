<h1>Edit Movie</h1>
<form action="/movies/<%= @movie_id %>" method="post">
  <input type="text" value="<%= @movie_details['name'] %>"name="name">
    <select name="person_id">
      <% @people.each do |person| %>
      <option selected="<%= @movie_details['person_id'] %>" value="<%= person['id'] %>">
        <%= person['name'] %>
        <% end %>
      </option>
    </select>
  <button>Edit Movie</button>
</form>

