<div>
<% @task.each do |todo| %>
  <form action=/edit_todo/<%= todo['id'] %> method="post">
    Task: <br/><input type="text" name="name" value="<%= todo['name'] %>"><br/>
    Description: <input type="text" name="description" value="<%= todo['description'] %>"><br/>
    Movie: <input type="text" name="movie_id" value="<%= todo['movie_id'] %>"><br/>
    Person: <input type="text" name="person_id" value="<%= todo['person_id'] %>"><br/><br/>
    <button>Update</button>
  </form><br/><br/>
  <form action="/delete/todos/<%= todo['id'] %>" method="post">
    <button>Delete</button>
  </form>
<% end %>
<br/>
<br/>
<a href="/todos">Back to Tasks</a>
</div>